<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@android:color/white"
    android:padding="20dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="30dp">

        <View
            android:layout_width="0dp"
            android:layout_height="6dp"
            android:layout_weight="1"
            android:background="#FF6000"
            android:layout_marginStart="4dp"
            android:layout_marginEnd="4dp"/>

        <View
            android:layout_width="0dp"
            android:layout_height="6dp"
            android:layout_weight="2"
            android:background="#F5D6A8"/>
    </LinearLayout>

    <TextView
        android:id="@+id/foodallergy"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:fontFamily="@font/roboto_serif_bold"
        android:text="Food Allergy"
        android:textColor="#454545"
        android:textSize="32sp"
        android:textStyle="bold"
        android:layout_marginBottom="0dp"/>

    <TextView
        android:id="@+id/question"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/roboto_serif_bold"
        android:textColor="#454545"
        android:text="Question"
        android:textSize="32sp"
        android:textStyle="bold"
        android:layout_marginBottom="30dp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Do you have any food allergies?"
        android:fontFamily="@font/roboto_serif_regular"

        android:textColor="#454545"
        android:textSize="16sp"
        android:layout_marginBottom="24dp"/>

    <RadioGroup
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/yes_allergen"
            android:text="Yes"
            android:textSize="14sp"
            android:fontFamily="@font/roboto_serif_regular"

            android:textColor="#000000"
            android:button="@drawable/radio_button_selector"
            android:checked="false"
            android:layout_marginBottom="16dp"
            android:paddingStart="8dp"/>

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/no_allergen"
            android:text="No"
            android:textSize="14sp"
            android:fontFamily="@font/roboto_serif_regular"
            android:textColor="#000000"
            android:button="@drawable/radio_button_selector"
            android:checked="false"
            android:paddingStart="8dp"/>
    </RadioGroup>

    <Button
        android:id="@+id/btn_next"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="300dp"
        android:layout_marginBottom="16dp"
        android:background="@drawable/rounded_button"
        android:fontFamily="@font/roboto_serif_bold"
        android:padding="1dp"
        android:text="Next"
        android:textAllCaps="false"
        android:textColor="@android:color/white"
        android:textSize="15sp" />

</LinearLayout>