<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="32dp"
    android:background="@android:color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="30dp">

        <View
            android:layout_width="200dp"
            android:layout_height="6dp"
            android:layout_weight="1"
            android:background="#FF6000"
            android:layout_marginStart="4dp"
            android:layout_marginEnd="4dp"/>

        <View
            android:layout_width="0dp"
            android:layout_height="6dp"
            android:layout_weight="2"
            android:background="#F5D6A8"/>
    </LinearLayout>

    <TextView
        android:id="@+id/settingupyour"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Setting up your"
        android:fontFamily="@font/roboto_serif_bold"
        android:textColor="#454545"
        android:textSize="32sp"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/descnewpassword"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="New Password"
        android:fontFamily="@font/roboto_serif_bold"
        android:textColor="#454545"
        android:textSize="32sp"
        android:textStyle="bold"
        android:layout_marginBottom="49dp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/roboto_serif_regular"
        android:text="Please enter the following to update your password."
        android:textColor="#454545"
        android:textSize="14sp"
        android:layout_marginBottom="30dp"/>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@drawable/rounded_edit_text"
        android:padding="12dp"
        android:layout_marginBottom="16dp"
        android:gravity="center_vertical">

        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@android:drawable/ic_lock_lock"
            android:tint="#FFA559"
            android:layout_marginEnd="12dp"
            tools:ignore="UseAppTint" />

        <EditText
            android:id="@+id/et_newpassword"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@null"
            android:fontFamily="@font/roboto_serif_regular"
            android:hint="Enter new password"
            android:inputType="textPassword"
            android:textColor="#454545"
            android:textColorHint="#454545"
            android:textSize="14sp" />

        <ImageButton
            android:id="@+id/btn_toggle_new_password"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_not_view"
            android:background="@null"
            android:tint="#FFA559"
            android:contentDescription="Toggle password visibility"
            tools:ignore="UseAppTint" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@drawable/rounded_edit_text"
        android:padding="12dp"
        android:layout_marginBottom="45dp"
        android:gravity="center_vertical">

        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@android:drawable/ic_lock_lock"
            android:tint="#FFA559"
            android:layout_marginEnd="12dp"
            tools:ignore="UseAppTint" />

        <EditText
            android:id="@+id/et_confirm_new_password"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@null"
            android:fontFamily="@font/roboto_serif_regular"
            android:hint="Enter confirm new password"
            android:inputType="textPassword"
            android:textColor="#454545"
            android:textColorHint="#454545"
            android:textSize="14sp" />

        <ImageButton
            android:id="@+id/btn_toggle_confirm_new_password"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_not_view"
            android:background="@null"
            android:tint="#FFA559"
            android:contentDescription="Toggle password visibility"
            tools:ignore="UseAppTint" />
    </LinearLayout>

    <Button
        android:id="@+id/btn_save"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="200dp"
        android:layout_marginBottom="16dp"
        android:fontFamily="@font/roboto_serif_bold"
        android:background="@drawable/rounded_button"
        android:padding="9dp"
        android:text="Save"
        android:textAllCaps="false"
        android:textColor="@android:color/white"
        android:textSize="14sp" />


</LinearLayout>