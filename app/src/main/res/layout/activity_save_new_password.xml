<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="32dp"
    android:background="@android:color/white">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="95dp"
        android:orientation="horizontal">

        <View
            android:layout_width="0dp"
            android:layout_height="6dp"
            android:layout_weight="130"
            android:background="#FF6000" />

    </LinearLayout>

    <TextView
        android:id="@+id/success"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Successfully"
        android:fontFamily="@font/roboto_serif_bold"
        android:textColor="#454545"
        android:textSize="32sp"
        android:textStyle="bold"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="changed password"
        android:fontFamily="@font/roboto_serif_bold"
        android:textColor="#454545"
        android:textSize="32sp"
        android:textStyle="bold"
        android:layout_marginBottom="49dp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/roboto_serif_regular"
        android:text="You can now login again with your new set password."
        android:textColor="#454545"
        android:textSize="14sp"
        android:layout_marginBottom="180dp"/>


    <Button
        android:id="@+id/btn_save"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="135dp"
        android:layout_marginBottom="16dp"
        android:fontFamily="@font/roboto_serif_bold"
        android:background="@drawable/rounded_button"
        android:padding="9dp"
        android:text="Continue"
        android:textAllCaps="false"
        android:textColor="@android:color/white"
        android:textSize="14sp" />


</LinearLayout>