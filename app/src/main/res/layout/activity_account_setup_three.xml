<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:background="@android:color/white"
    android:padding="20dp">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="24dp"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/btn_back"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginBottom="48dp"
            android:background="@drawable/circle_background"
            android:contentDescription="Go back"
            android:src="@drawable/ic_arrow_back"
            android:tint="@android:color/white"
            tools:ignore="UseAppTint" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="30dp">

            <View
                android:layout_width="200dp"
                android:layout_height="6dp"
                android:layout_weight="1"
                android:background="#FF6000"
                android:layout_marginStart="4dp"
                android:layout_marginEnd="4dp"/>

            <View
                android:layout_width="0dp"
                android:layout_height="6dp"
                android:layout_weight="2"
                android:background="#F5D6A8"/>
        </LinearLayout>

    </LinearLayout>

    <TextView
        android:id="@+id/selectyour"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/roboto_serif_bold"
        android:text="Select your"
        android:textColor="#454545"
        android:textSize="32sp"
        android:textStyle="bold"
        android:layout_marginBottom="0dp"/>

    <TextView
        android:id="@+id/allergensseverity"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/roboto_serif_bold"
        android:textColor="#454545"
        android:text="Allergens Severity"
        android:textSize="32sp"
        android:textStyle="bold"
        android:layout_marginBottom="30dp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Select severity level for each allergen:"
        android:fontFamily="@font/roboto_serif_regular"
        android:textColor="#454545"
        android:textSize="16sp"
        android:layout_marginBottom="16dp"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <LinearLayout
            android:id="@+id/allergens_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
        </LinearLayout>
    </ScrollView>

    <Button
        android:id="@+id/btn_next"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp"
        android:background="@drawable/rounded_button"
        android:fontFamily="@font/roboto_serif_bold"
        android:padding="1dp"
        android:text="Next"
        android:textAllCaps="false"
        android:textColor="@android:color/white"
        android:textSize="15sp" />

</LinearLayout>