<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white">

    <androidx.core.widget.NestedScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="32dp">

            <ImageButton
                android:id="@+id/btn_back"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_marginBottom="50dp"
                android:background="@drawable/circle_background"
                android:contentDescription="Go back"
                android:src="@drawable/ic_arrow_back"
                android:tint="@android:color/white"
                tools:ignore="UseAppTint" />

            <TextView
                android:id="@+id/letsget"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/roboto_serif_bold"
                android:text="Let's get"
                android:textColor="#454545"
                android:textSize="32sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/started"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Started"
                android:fontFamily="@font/roboto_serif_bold"
                android:textColor="#454545"
                android:textSize="32sp"
                android:textStyle="bold"
                android:layout_marginBottom="45dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="@drawable/rounded_edit_text"
                android:padding="10dp"
                android:layout_marginBottom="16dp"
                android:gravity="center_vertical">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_person"
                    android:tint="#FFA559"
                    android:layout_marginEnd="12dp"
                    tools:ignore="UseAppTint" />

                <EditText
                    android:id="@+id/et_firstname"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textColor="#454545"
                    android:background="@null"
                    android:hint="Enter your first name"
                    android:fontFamily="@font/roboto_serif_regular"
                    android:inputType="textPersonName"
                    android:textColorHint="#454545"
                    android:textSize="14sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="@drawable/rounded_edit_text"
                android:padding="10dp"
                android:layout_marginBottom="16dp"
                android:gravity="center_vertical">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_person"
                    android:tint="#FFA559"
                    android:layout_marginEnd="12dp"
                    tools:ignore="UseAppTint" />

                <EditText
                    android:id="@+id/et_lastname"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textColor="#454545"
                    android:background="@null"
                    android:hint="Enter your last name"
                    android:fontFamily="@font/roboto_serif_regular"
                    android:inputType="textPersonName"
                    android:textColorHint="#454545"
                    android:textSize="14sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="@drawable/rounded_edit_text"
                android:padding="10dp"
                android:layout_marginBottom="16dp"
                android:gravity="center_vertical">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_person"
                    android:tint="#FFA559"
                    android:layout_marginEnd="12dp"
                    tools:ignore="UseAppTint" />

                <EditText
                    android:id="@+id/et_middlename"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@null"
                    android:textColor="#454545"
                    android:hint="Enter your middle name (optional)"
                    android:inputType="textPersonName"
                    android:textColorHint="#454545"
                    android:textSize="14sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="@drawable/rounded_edit_text"
                android:padding="10dp"
                android:layout_marginBottom="16dp"
                android:gravity="center_vertical">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@android:drawable/ic_dialog_email"
                    android:tint="#FFA559"
                    android:layout_marginEnd="12dp"
                    tools:ignore="UseAppTint" />

                <EditText
                    android:id="@+id/et_email"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:fontFamily="@font/roboto_serif_regular"
                    android:background="@null"
                    android:textColor="#454545"
                    android:hint="Enter email"
                    android:inputType="textEmailAddress"
                    android:textColorHint="#454545"
                    android:textSize="14sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="@drawable/rounded_edit_text"
                android:padding="10dp"
                android:layout_marginBottom="16dp"
                android:fontFamily="@font/roboto_serif_regular"
                android:gravity="center_vertical">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@android:drawable/ic_lock_lock"
                    android:tint="#FFA559"
                    android:layout_marginEnd="12dp"
                    tools:ignore="UseAppTint" />

                <EditText
                    android:id="@+id/et_password"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@null"
                    android:fontFamily="@font/roboto_serif_regular"
                    android:hint="Enter password"
                    android:textColor="#454545"
                    android:inputType="textPassword"
                    android:textColorHint="#454545"
                    android:textSize="14sp" />

                <ImageButton
                    android:id="@+id/btn_toggle_password"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_not_view"
                    android:background="@null"
                    android:tint="#FFA559"
                    android:contentDescription="Toggle password visibility"
                    tools:ignore="UseAppTint" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="@drawable/rounded_edit_text"
                android:padding="10dp"
                android:layout_marginBottom="50dp"
                android:gravity="center_vertical">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@android:drawable/ic_lock_lock"
                    android:tint="#FFA559"
                    android:layout_marginEnd="12dp"
                    tools:ignore="UseAppTint" />

                <EditText
                    android:id="@+id/et_confirm_password"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@null"
                    android:hint="Enter confirm password"
                    android:inputType="textPassword"
                    android:textColor="#454545"
                    android:fontFamily="@font/roboto_serif_regular"
                    android:textColorHint="#454545"
                    android:textSize="14sp" />

                <ImageButton
                    android:id="@+id/btn_toggle_confirm_password"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_not_view"
                    android:background="@null"
                    android:tint="#FFA559"
                    android:contentDescription="Toggle password visibility"
                    tools:ignore="UseAppTint" />
            </LinearLayout>

            <Button
                android:id="@+id/btn_register"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Register"
                android:textColor="@android:color/white"
                android:background="@drawable/rounded_button"
                android:fontFamily="@font/roboto_serif_bold"
                android:textAllCaps="false"
                android:padding="9dp"
                android:layout_marginBottom="1dp"
                android:textSize="14sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="14dp"
                android:gravity="center">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:text="By registering, you agree to the "
                    android:textSize="12sp"
                    android:textColor="#3D3B40" />

                <TextView
                    android:id="@+id/tv_termsAndPrivacy"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="12sp"
                    android:text="Terms &amp; Privacy Policy."
                    android:textColor="#3D3B40"
                    android:textStyle="bold" />
            </LinearLayout>
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>